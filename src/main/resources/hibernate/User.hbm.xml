<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="es.ucm.model.User" table="USER" catalog="iw">
        <id name="id" type="java.lang.Long">
            <column name="ID_USER" />
            <generator class="identity" />
        </id>
        
         <id name="email" type="string">
            <column name="EMAIL" />
        </id>
        
        <property name="passwd" type="string">
            <column name="PASSWD" length="10" not-null="true" unique="true" />
        </property>

           <property name="name" type="string">
            <column name="USER_NAME" length="20" not-null="true" unique="true" />
        </property>
           <property name="firstName" type="string">
            <column name="FIRST_NAME" length="20" not-null="true" unique="true" />
        </property>
           <property name="lastName" type="string">
            <column name="LAST_NAME" length="20" not-null="true" unique="true" />
        </property>
           <property name="age" type="char">
            <column name="AGE" length="20" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>